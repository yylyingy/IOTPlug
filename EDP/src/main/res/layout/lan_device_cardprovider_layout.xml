<?xml version="1.0" encoding="utf-8"?>
<com.dexafree.materialList.card.CardLayout
    style="@style/MainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="1dp">
    <android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView"
        style="@style/Material_Card_View">
        <!--card_view:cardElevation="@dimen/card_elevation">-->
        <!--card_view:cardCornerRadius="@dimen/card_corner_radius"-->

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/icon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:materialIcon="account"
                    app:materialIconSize="24dp"
                    app:materialIconColor="@color/my_blue"
                    android:scaleType="center"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/deviceName"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:maxLength="14"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/ledState"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/adValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleColor="#0000ff">
                            <TextView
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:id="@+id/ledOn"
                                android:gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleColor="#f200ff">
                            <TextView
                                android:id="@+id/ledOff"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:gravity="center_horizontal"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" />
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:mrl_rippleAlpha="0.2"
                            app:mrl_rippleColor="#0000ff">

                            <TextView
                                android:id="@+id/adcPlug"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:gravity="center_horizontal"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" />
                        </com.balysv.materialripple.MaterialRippleLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</com.dexafree.materialList.card.CardLayout>
